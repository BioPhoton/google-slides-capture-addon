{
  "extends": ["tslint-immutable"],
  "rules": {
    "adjacent-overload-signatures": true,
    "array-type": [true, "array"],
    "arrow-return-shorthand": [true, "multiline"],
    "await-promise": true,
    "ban-comma-operator": true,
    "ban-types": [
      true,
      ["Boolean", "Please use `boolean` instead"],
      ["Number", "Please use `number` instead"],
      ["Object", "Please use `{}` instead."],
      ["String", "Please use `string` instead"]
    ],
    "binary-expression-operand-order": true,
    "callable-types": true,
    "class-name": true,
    "curly": true,
    "cyclomatic-complexity": [true, 10],
    "deprecation": true,
    "encoding": true,
    "forin": true,
    "import-blacklist": [true, "rxjs/Rx", "rxjs/internal/operators"],
    "interface-over-type-literal": true,
    "interface-name": [true, "never-prefix"],
    "label-position": true,
    "linebreak-style": [true, "LF"],
    "member-access": false,
    "no-any": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [true, 2],
    "no-console": [true, "debug", "log", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-delete": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-dynamic-delete": true,
    "no-empty": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": [true, "dev", "optional"],
    "no-import-side-effect": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-internal-module": true,
    "no-invalid-this": true,
    "no-invalid-template-strings": true,
    "no-loop-statement": true,
    "no-magic-numbers": [true, -1, 0, 1, 2, 10, 100, 1000],
    "no-misused-new": true,
    "no-namespace": true,
    "no-object-mutation": [
      true,
      {
        "ignore-prefix": "this."
      }
    ],
    "no-parameter-reassignment": false,
    "no-reference": true,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-this-assignment": true,
    "no-unnecessary-class": [true, "allow-empty-class"],
    "no-unnecessary-initializer": true,
    "no-unnecessary-type-assertion": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "number-literal-format": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-readonly": true,
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "prefer-template": [true, "allow-single-concat"],
    "radix": true,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "typedef": [true, "call-signature", "parameter"],
    "unified-signatures": true,
    "use-isnan": true,
    "variable-name": [true, "ban-keywords", "check-format"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}
