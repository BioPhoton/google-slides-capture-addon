{
  "compilerOptions": {
    "target": "es3",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["ES6"]
  },
  "compileOnSave": true,
  "rootDir": "src",
  "include": ["./src/**/*"]
}
